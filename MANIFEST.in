include README.md
include LICENSE
include requirements.txt
include CHANGELOG.md
recursive-include docs *
recursive-include examples *
recursive-include frontend/src/ui *
recursive-include src/cli/templates *
# Python
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * *.pyd
recursive-exclude * *$py.class
recursive-exclude * *.so
global-exclude *.egg-info
global-exclude *.egg
global-exclude .installed.cfg
global-exclude MANIFEST

# Virtual Environment
prune venv
prune env
prune ENV
prune .venv

# Node
global-exclude node_modules
global-exclude node_modules/**
global-exclude npm-debug.log*
global-exclude yarn-debug.log*
global-exclude yarn-error.log*

# Build directories
prune dist
prune build
prune develop-eggs
prune downloads
prune eggs
prune .eggs
prune lib
prune lib64
prune parts
prune sdist
prune var
prune wheels

# IDE
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Environment files
global-exclude .env
global-exclude .env.local
global-exclude .env.*.local

# Database
global-exclude *.db
global-exclude *.sqlite
global-exclude *.sqlite3

# Logs
global-exclude *.log
global-exclude logs

# Frontend build
global-exclude frontend/dist
global-exclude frontend/build
global-exclude frontend/.vite
global-exclude frontend/dev-dist

# OS
global-exclude .DS_Store
global-exclude Thumbs.db

# Project specific
global-exclude .wework
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .history

# Git
recursive-exclude * .git*

